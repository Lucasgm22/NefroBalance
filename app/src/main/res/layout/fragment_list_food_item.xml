<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom"
    android:layout_marginTop="@dimen/recycler_view_item_margin_top"
    android:layout_marginHorizontal="@dimen/default_spacing"
    app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:id="@+id/text_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_list_item_title_default"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:padding="@dimen/default_spacing"/>
</androidx.cardview.widget.CardView>